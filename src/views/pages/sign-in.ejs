          .then((userCredential) => {
            // Signed in 
            const user = userCredential.user;
            // ...
            user.getIdToken().then((idToken) => {

              fetch('/sessionLogin', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ idToken })
